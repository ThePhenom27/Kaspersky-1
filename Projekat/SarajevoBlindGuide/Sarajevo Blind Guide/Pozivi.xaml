    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Gray">
        <Button x:Name="hitnaBtn" Content="HITNA POMOĆ" HorizontalAlignment="Stretch" Height="140" Margin="10,140,10,0" VerticalAlignment="Top" Width="340" Background="Orange" BorderBrush="Black"/>
