        <Button x:Name="odabirJezikaBtn" Content="ODABIR JEZIKA" HorizontalAlignment="Stretch" Margin="10,382,10,134" VerticalAlignment="Bottom" Height="120" BorderBrush="Black" Background="Orange"/>
        <Button x:Name="izlazBtn" Content="IZLAZ" HorizontalAlignment="Stretch" Margin="10,506,10,10" VerticalAlignment="Bottom" Height="120" Background="Orange" BorderBrush="Black"/>

    </Grid>
